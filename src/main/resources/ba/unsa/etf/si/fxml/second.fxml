<AnchorPane prefHeight="633.0" prefWidth="763.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.si.controllers.SuppliesController">
    <stylesheets>
        <URL value="@../css/supplies.css" />
    </stylesheets>
    <VBox prefHeight="633.0" prefWidth="763.0">
      <children>
         <Label prefHeight="51.0" prefWidth="473.0" text="Zalihe u skladištu">
            <font>
               <Font name="Arial Narrow" size="28.0" />
            </font>
            <padding>
               <Insets bottom="5.0" left="30.0" top="10.0" />
            </padding>
         </Label>
         <TableView fx:id="articleTable" prefHeight="541.0" prefWidth="763.0" styleClass="tabela">
           <columns>
               <TableColumn fx:id="productID" prefWidth="111.0" styleClass="tabela-row-cell" text="ID artikla" resizable="false" />
             <TableColumn id="imageCol" fx:id="productImage" prefWidth="106.0" styleClass="tabela-row-cell" text="Slika"  resizable="false"/>
             <TableColumn fx:id="productName" prefWidth="220.0" styleClass="tabela-row-cell" text="Naziv " resizable="false" />
               <TableColumn fx:id="quantityInStock" prefWidth="296.0" styleClass="tabela-row-cell" text="Količina u skladištu" resizable="false" />
           </columns>
            <VBox.margin>
               <Insets left="19.0" right="10.0" />
            </VBox.margin>
         </TableView>
      </children>
   </VBox>
</AnchorPane>
