<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import java.net.URL?>
<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane hgap="20.0" prefHeight="600.0" prefWidth="1250.0" vgap="20.0" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1">
    <stylesheets>
        <URL value="@../css/receipt.css"/>
    </stylesheets>

    <children>
        <ChoiceBox fx:id="myCashRegisterSearchFilters" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0"
                   prefWidth="200.0" value="Search by name">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Search by name"/>
                    <String fx:value="Search by ID"/>
                </FXCollections>
            </items>
        </ChoiceBox>
        <TextField fx:id="myCashRegisterSearchInput" maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="40.0"
                   prefWidth="300.0" promptText="Search here" GridPane.columnIndex="1">
            <font>
                <Font size="14.0"/>
            </font>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
            <padding>
                <Insets left="10.0"/>
            </padding>
        </TextField>
        <TableView fx:id="receiptTable" editable="true" styleClass="receiptTable" GridPane.columnIndex="2"
                   GridPane.rowIndex="1" GridPane.rowSpan="2">
            <columns>
                <TableColumn fx:id="productName" maxWidth="-1.0" minWidth="200.0" prefWidth="200.0" resizable="false"
                             styleClass="tabela-row-cell" text="Name"/>
                <TableColumn fx:id="productPrice" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0" resizable="false"
                             styleClass="tabela-row-cell" text="Price"/>
                <TableColumn fx:id="productDiscount" maxWidth="-1.0" minWidth="125.0" prefWidth="125.0"
                             resizable="false" styleClass="tabela-row-cell" text="Discount"/>
                <TableColumn fx:id="productQuantity" maxWidth="-1.0" minWidth="100.0" prefWidth="100.0"
                             resizable="false" styleClass="tabela-row-cell" text="Quantity"/>
                <TableColumn fx:id="total" maxWidth="-1.0" minWidth="150.0" prefWidth="150.0" resizable="false"
                             styleClass="tabela-row-cell" text="Total"/>
            </columns>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </TableView>
        <TableView fx:id="productsTable" prefHeight="119.0" GridPane.columnSpan="2" GridPane.rowIndex="1">
            <columns>
                <TableColumn fx:id="productId" editable="false" maxWidth="-1.0" minWidth="200.0" prefWidth="200.0"
                             text="id"/>
                <TableColumn fx:id="productTitle" editable="false" maxWidth="-1.0" minWidth="300.0" prefWidth="300.0"
                             text="name"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
        <Label fx:id="price" text="0.00" GridPane.columnIndex="2" GridPane.halignment="LEFT" GridPane.rowIndex="3"
               GridPane.valignment="TOP">
            <GridPane.margin>
                <Insets left="5.0"/>
            </GridPane.margin>
        </Label>
    </children>
    <rowConstraints>
        <RowConstraints percentHeight="10.0" valignment="CENTER"/>
        <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" percentHeight="50.0" prefHeight="30.0"/>
        <RowConstraints minHeight="10.0" percentHeight="10.0" prefHeight="30.0"/>
    </rowConstraints>
    <columnConstraints>
        <ColumnConstraints halignment="LEFT"/>
        <ColumnConstraints/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
</GridPane>
