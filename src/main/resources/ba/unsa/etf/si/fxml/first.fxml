                        <String fx:value="Search by ID" />
                    </FXCollections>
                </items>
            </ChoiceBox>
            <TextField fx:id="myCashRegisterSearchInput" layoutY="82.0" prefHeight="48.0" prefWidth="302.0" promptText="Search here" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <JFXButton fx:id="myCashRegisterSearchButton" layoutY="82.0" onAction="#clickSearchButton" prefHeight="48.0" prefWidth="62.0" styleClass="search" GridPane.columnIndex="3" GridPane.rowIndex="2" />
