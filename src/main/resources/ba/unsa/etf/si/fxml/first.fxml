            <Label fx:id="myCashRegisterTitle" alignment="CENTER" text="Cash Register" GridPane.columnIndex="1" GridPane.rowIndex="1" />
         <columnConstraints>
            <ColumnConstraints />
            <ColumnConstraints />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints />
         </rowConstraints>
        </GridPane>
        <GridPane fx:id="myCashRegisterSearchActiveBasket" GridPane.columnIndex="1" GridPane.rowIndex="2">
            <stylesheets>
                <URL value="@../css/receipt.css" />
            </stylesheets>
            <TableView fx:id="receiptTable" prefHeight="541.0" prefWidth="717.0" styleClass="receiptTable">
                <columns>
                    <TableColumn fx:id="productName" prefWidth="150.0" resizable="false" styleClass="tabela-row-cell" text="Name" />
                    <TableColumn fx:id="productPrice" prefWidth="130.0" resizable="false" styleClass="tabela-row-cell" text="Price" />
                    <TableColumn fx:id="productQuantity" prefWidth="115.0" resizable="false" styleClass="tabela-row-cell" text="Quantity" />
                    <TableColumn fx:id="productDiscount" prefWidth="115.0" resizable="false" styleClass="tabela-row-cell" text="Discount" />
                    <TableColumn fx:id="total" prefWidth="140.0" resizable="false" styleClass="tabela-row-cell" text="Total" />
                </columns>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            </TableView>
            <Label prefHeight="27.0" prefWidth="129.0" text="Total Amount:" GridPane.rowIndex="1">
            <font>
               <Font size="18.0" />
            </font>
            <padding>
               <Insets left="5.0" />
            </padding></Label>
         <TextField fx:id="totalAmount" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="176.0" GridPane.halignment="CENTER" GridPane.rowIndex="1">
