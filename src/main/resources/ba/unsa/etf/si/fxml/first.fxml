<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import java.lang.*?>
<?import java.net.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ba.unsa.etf.si.controllers.MyCashRegisterController" maxHeight="Infinity" maxWidth="Infinity">

    <GridPane GridPane.rowIndex="1" GridPane.columnIndex="1">
        <GridPane GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label fx:id="myCashRegisterInstructionsForSearch" text="Select the filter and search for products." GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="3" />
            <ChoiceBox fx:id="myCashRegisterSearchFilters" layoutY="82.0" prefHeight="48.0" prefWidth="272.0" value="Search by name" GridPane.rowIndex="2" GridPane.columnIndex="1">
                <items>
                    <FXCollections fx:factory="observableArrayList">
                        <String fx:value="Search by name" />
                        <String fx:value="Search by ID" />
                    </FXCollections>
                </items>
            </ChoiceBox>
            <TextField fx:id="myCashRegisterSearchInput" layoutY="82.0" prefHeight="48.0" prefWidth="302.0" promptText="Search here" GridPane.rowIndex="2" GridPane.columnIndex="2" />
        </GridPane>
        <GridPane fx:id="myCashRegisterSearchResultsPane" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <VBox >
            <Label fx:id="productListLabel" styleClass="myCashRegisterNothingToShow"  text="Nothing to show 123." alignment="CENTER"/>
            <TableView fx:id="productsTable">
                <columns>
                    <TableColumn fx:id="productId" text="id"/>
                    <TableColumn fx:id="productTitle" text="name"/>
                </columns>
            </TableView>
            <!--<Button text="Click me" onAction="#btnClicked" /> -->
            </VBox>
        </GridPane>
    </GridPane>

    <GridPane fx:id="myCashRegisterActive" GridPane.rowIndex="1" GridPane.columnIndex="2">
        <GridPane GridPane.rowIndex="1" GridPane.columnIndex="1">
            <Label fx:id="myCashRegisterTitle" alignment="CENTER" text="Cash Register" GridPane.rowIndex="1" GridPane.columnIndex="1" />
        </GridPane>
        <GridPane fx:id="myCashRegisterSearchActiveBasket" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <stylesheets>
                <URL value="@../css/receipt.css" />
            </stylesheets>
            <TableView fx:id="receiptTable" prefHeight="541.0" prefWidth="763.0" styleClass="receiptTable">
                <columns>
                    <TableColumn fx:id="productID" prefWidth="111.0" resizable="false" styleClass="tabela-row-cell" text="ID" />
                    <TableColumn fx:id="productName" prefWidth="150.0" resizable="false" styleClass="tabela-row-cell" text="Name" />
                    <TableColumn fx:id="productPrice" prefWidth="130.0" resizable="false" styleClass="tabela-row-cell" text="Price" />
                    <TableColumn fx:id="productQuantity" prefWidth="115.0" resizable="false" styleClass="tabela-row-cell" text="Quantity" />
                    <TableColumn fx:id="productDiscount" prefWidth="115.0" resizable="false" styleClass="tabela-row-cell" text="Discount" />
                    <TableColumn fx:id="total" prefWidth="140.0" resizable="false" styleClass="tabela-row-cell" text="Total" />
                </columns>
            <opaqueInsets>
               <Insets />
            </opaqueInsets>
            </TableView>
        </GridPane>
    </GridPane>
</GridPane>
