<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import java.net.URL?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.si.controllers.ArchiveReceipt">
    <stylesheets>
        <URL value="@../css/receipt.css" />
    </stylesheets>
    <children>
       <TableView fx:id="archiveReceiptTable" editable="false" prefHeight="600.0" styleClass="receiptTable" GridPane.columnIndex="1" GridPane.rowIndex="2">
           <columns>
               <TableColumn fx:id="prodName" minWidth="150.0" prefWidth="150.0" resizable="false" styleClass="table-cell" text="Name" />
               <TableColumn fx:id="prodPrice" minWidth="130.0" prefWidth="130.0" resizable="false" styleClass="table-cell" text="Price" />
               <TableColumn fx:id="prodDiscount" minWidth="105.0" prefWidth="105.0" resizable="false" styleClass="table-cell" text="Discount" />
               <TableColumn fx:id="prodQuantity" minWidth="100.0" prefWidth="100.0" resizable="false" styleClass="table-cell" text="Quantity" />
               <TableColumn fx:id="totalPrice" minWidth="150.0" prefWidth="150.0" resizable="false" styleClass="table-cell" text="Total" />
           </columns>
           <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
           </columnResizePolicy>
       </TableView>
   </children>
</AnchorPane>
